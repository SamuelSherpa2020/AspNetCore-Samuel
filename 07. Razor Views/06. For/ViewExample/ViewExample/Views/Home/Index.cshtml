@using ViewExample.Models

@{
    string titleName = "AspNet Core C# blocks and Expressions";
    List<Person> people = new List<Person>{
    new Person{ Name = "Samuel",DOB = DateTime.Parse("2000-07-02"),PersonGender = Gender.Male},
    new Person{ Name = "Samuel",DOB = Convert.ToDateTime("2001-08-02"),PersonGender = Gender.Female},
    new Person{ Name = "Samuel",DOB = Convert.ToDateTime("2007-10-02"),PersonGender = Gender.Others}
    };
}

<!DOCTYPE html>
<html>
<head>
    <title>@titleName</title>
    <meta charset="utf-8" />
</head>

<body>
    <h2>Welcome</h2>
    @* <p>Halo! @person.Name</p> *@

    @* Code block for Foreach *@
  @*   @foreach (Person person in people)
    {
        <p>Name: @person.Name</p>
        <p>Gender: @person.PersonGender</p>
        if (person.DOB is not null)
        {
            <p>Date of Birth: @person.DOB.Value.ToString("yyyy-MM-dd")</p>
        }
        <br />
    } *@

    @* Code block for for *@
    @for(int i = 0; i<2; i++)
    {
        Person person = people[0];
        <p>Name: @person.Name</p>
        <p>Gender: @person.PersonGender</p>
        if (person.DOB is not null)
        {
            <p>Date of Birth: @person.DOB.Value.ToString("yyyy-MM-dd")</p>
        }
        <br />
    }
</body>
</html>
